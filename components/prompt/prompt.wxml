<view class="prompt-box" hidden="{{isHidden}}">
  <view class="prompt-content contentFontColor">
    <view class="prompt-title">{{title}}</view>
    <input class="prompt-input" type="text" bindinput="_input" value="{{cost}}" placeholder="非必填"/>
    <view class="prompt-btn-group">
      <button class="btn-item btn-item-cancel" bind:tap="_cancel" type="warn">{{btn_cancel}}</button>
      <button class="btn-item btn-item-confirm" bind:tap="_confirm" type="primary">{{btn_certain}}</button>
    </view>
  </view>
</view>