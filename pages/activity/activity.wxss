.activity {
  padding: 30rpx;
  overflow: hidden;
  background: #F9FAFB;
}

.activity-item {
  background: #fff;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  border-radius: 5px;
  position: relative;
}

.activity-item:last-child {
  margin: 0;
}

.activity-pic {
  width: 100%;
  height: 340rpx;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}
.activity-text{
 padding: 30rpx 24rpx 34rpx;
 display: flex;
 align-items: center;
 justify-content: space-between;
}
.activity-title {
  color: #333;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.activity-button{
  width:160rpx;
  height:56rpx;
  text-align: center;
  line-height: 56rpx;
  border-radius: 50px;
  background: #FF5C59;
  color: #fff;
  font-size: 28rpx;
  flex-shrink: 0;
}
.hot-tag {
  position: absolute;
  right: 0;
  top: 0;
  color: #fff;
  background:url("https://caishang.5rkk.com/wxxcx/images/icon/apply_bg.png") left top no-repeat;
  background-size: 100% 100%;
  width:124rpx;
  text-align: center;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 28rpx;
  padding-left: 10rpx;
}