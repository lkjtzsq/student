.pic{
  width:100%;
  display: block;
}
.container{
  padding: 24rpx 30rpx;
  display: flex;
  flex-direction: column;
  text-align: justify;
  padding-bottom: 176rpx;
}
.title{
  font-size: 32rpx;
  color: #000;
  line-height: 44rpx;
  margin-bottom: 12rpx;
  font-weight: bold;
}
.content{
  font-size: 28rpx;
  line-height: 56rpx;
  color: #666;
}
.join-panel{
  position: fixed;
  width:-webkit-fill-available;
  bottom:0;
  height:84rpx;
  background: #fff;
  z-index: 100;
  display: flex;
  align-items: center;
  padding:40rpx;
  justify-content: space-between;
  border-top:1px solid #dcdcdc;
}
.join-btn{
  display: block;
  width:100%;
  height:84rpx;
  background: #FF5C59;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 84rpx;
  border-radius: 50px;
}
.video-bg{
  position: fixed;
  width:100%;
  height:100%;
  left:0;
  top:0;
  z-index: 1000;
  background: #000;
}
.video-bg video{
  display: block;
  width:100%;
}
.video-close{
  bottom:0;
  left:0;
  position: absolute;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  color:#fff;
  font-size: 32rpx;
  background:#ff5c59;
  width: 100%;
  font-weight: bold;
}