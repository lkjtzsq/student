.image-container{
  width: 100%;
  height:100vh;
  position: relative;
  display: flex;
  align-content: center;
  justify-items: center;
}
.image{
  width: 100%;
  height:100vh;
  display: block;
}
.btn-container{
  position: absolute;
  left:0;
  bottom:100rpx;
  width: 100%;
  display:flex;
  align-content: center;
  justify-content: space-between;
}
.btn-container button{
  height: 84rpx;
  background:rgba(255,92,89);
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 84rpx;
  border-radius: 4rpx;
  letter-spacing: 4rpx;
}