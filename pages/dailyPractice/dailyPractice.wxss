.container {
  display: flex;
  flex-direction: column;
  padding: 30rpx 30rpx 80rpx;
}

.question {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: bold;
}

.introduction {
  font-size: 28rpx;
  color: #666;
}

.image-container {
  position: relative;
  width: 500rpx;
  height: 260rpx;
  margin: 48rpx 0 0;
}

.image-container image {
  display: block;
  width: 100%;
  height: 100%;
}

.image-desc {
  font-size: 24rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  width: 130rpx;
  height: 52rpx;
  text-align: center;
  line-height: 52rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.4);
}

.line {
  height: 1px;
  background: #dcdcdc;
  margin: 50rpx 0;
}

.btn-group {
  display: flex;
}

.btn-group > image {
  width: 136rpx;
  height: 136rpx;
  margin-right: 20rpx;
}

.img-show-container {
  width: 136rpx;
  height: 136rpx;
  margin-right: 20rpx;
  position: relative;
}

.image-show {
  width: 100%;
  height: 100%;
}

.video-show {
  width: 136rpx;
  height: 136rpx;
}

.audio-show {
  width: 136rpx;
  height: 136rpx;
}

.delete {
  position: absolute;
  right: 5rpx;
  top: 5rpx;
  z-index: 10;
  width: 40rpx;
  height: 40rpx;
}

.practice-record {
  display: flex;
  align-items: center;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #dcdcdc;
  margin-top: 92rpx;
}

.practice-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
}

.practice-record-text {
  flex: 1;
}

.practice-record-arrow {
  width: 16rpx;
  height: 30rpx;
}

.submit-btn {
  background: #ff5c59;
  width: 600rpx;
  height: 86rpx;
  margin: 0 auto;
  text-align: center;
  line-height: 86rpx;
  color: #fff;
  font-size: 32rpx;
  display: block;
  border-radius: 50px;
}

.record-panel {
  display: flex;
  width: 100%;
  height: 90rpx;
  position: relative;
  background: #ff5c59;
  border-radius: 4px;
  align-items: center;
  margin-top: 40rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

.record-delete {
  width: 28rpx;
  height: 28rpx;
  margin-right: 30rpx;
}

.record-seconds {
  flex: 1;
  color: #fff;
  font-size: 28rpx;
}

.record-start {
  width: 56rpx;
  height: 56rpx;
}

.record-pause {
  width: 56rpx;
  height: 56rpx;
}

.record-stop {
  margin-left: 48rpx;
  height: 48rpx;
  border-left: 1px solid #a6e0f7;
  padding-left: 24rpx;
  line-height: 48rpx;
  color: #fff;
}

.record-show {
  display: flex;
  width: 100%;
  height: 90rpx;
  position: relative;
  background: #8fd1eb;
  border-radius: 4px;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

.record-show-left, .record-show-right {
  display: flex;
  align-items: center;
}

.record-show-btn {
  width: 56rpx;
  height: 56rpx;
  margin-right: 30rpx;
}

.currentTime, .holeTime {
  font-size: 28rpx;
  color: #fff;
}

.holeTime {
  height: 48rpx;
  border-right: 1px solid #a6e0f7;
  padding-right: 58rpx;
  margin-right: 24rpx;
  line-height: 48rpx;
}

.record-show-delete {
  width: 28rpx;
  height: 28rpx;
}
