
.login-panel {
  position: fixed;
  width: 100%;
  height: 100%;
  padding: 100rpx 50rpx;
  box-sizing: border-box;
  left: 0;
  top: 0;
  background:rgba(0,0,0,.5);
  z-index: 1000;
  text-align: center;
}
.login-text{
  font-size: 46rpx;
  color: #fff;
  margin-bottom: 60rpx;
  display: inline-block;
}
.login-panel button{
  margin-bottom: 40rpx;
}
.uitem {
  padding:30rpx 20rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 16rpx solid #F9FAFB;
}

.uintro {
  display: flex;
  align-items: center;
  margin-bottom: 26rpx;
}

.upic {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50px;
  margin-right: 16rpx;
}

.utext {
  display: flex;
  flex-direction: column;
}

.uname {
  font-size: 28rpx;
  margin-bottom: 4rpx;
}

.publish-time {
  font-size: 24rpx;
  color: #999;
}
.utalk{
  font-size: 28rpx;
  color: #000;
  margin-bottom: 20rpx;
}
.uimages{
  overflow: hidden;
}
.uimg{
  width:228rpx;
  height:228rpx;
  float: left;
  margin-right: 13rpx;
  margin-bottom: 13rpx;
}
.uimg:nth-child(3),.uimg:nth-child(6),.uimg:nth-child(9){
  margin-right: 0;
}
.ubtns{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 24rpx;
  color: #999;
  margin-top: 32rpx;
}
.ubtns image{
  width:30rpx;
  height:30rpx;
  margin-left: 34rpx;
}
.ubtns text{
  margin-left: 12rpx;
}
.comment-list{
  background: #F9FAFB;
  padding: 20rpx;
  font-size: 24rpx;
  margin-top: 40rpx;
}
.comment-item{
  margin-bottom: 20rpx;
  text-align: justify;
}
.comment-item:last-child{
  margin: 0;
}
.comment-name{
  font-size: 24rpx;
  color: #005B9E;
}
.comment-content{
  color: #2a2a2a;
  font-size: 24rpx;
}
.comment-panel{
  position: fixed;
  bottom:0;
  z-index: 99999;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  background:#fff;
  align-items: center;
  border-top: 1px solid #ccc;

}
.comment-input{
  border: 1px solid #ccc;
  display: block;
  flex: 1;
  padding: 10rpx 15rpx;
  border-radius: 5px;
  color: #333;
}
.comment-send{
  margin-left: 20rpx;
  background: #FF5C59;
  width:100rpx;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 50px;
  color: #fff;
  font-size: 24rpx;
  display: block;
}
.share{
  width: 30rpx;
  height: 30rpx;
  margin-left: 34rpx;
}
.share-btn{
  width: 100%;
  height: 100%;
  background: url('https://caishang.5rkk.com/wxxcx/images/icon/share.png');
  background-size: 100% 100%;
  margin: 0;
  padding: 0;
  display: inline-block;
  border-radius: 0;
}