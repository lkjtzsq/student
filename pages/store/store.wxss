.container {
  background: #f9fafb;
  overflow: hidden;
}
.fixed-top{
  position: fixed;
  top:0;
  width: 100%;
  z-index: 1000;
  height: 181rpx;
  overflow: hidden;
  background:#fff;
}
.search-container {
  padding: 24rpx 30rpx 0;
  background: #fff;
}

.search {
  height: 64rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
  background: #f4f5f6;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin: 0 18rpx 0 24rpx;
}

.search-input {
  font-size: 28rpx;
  color: #333;
  margin-right: 24rpx;
  flex: 1;
}
.topTabSwiper {
  display: flex;
  height: 90rpx;
  border-bottom: 1px solid #DCDCDC;
}

.tab {
  text-align: center;
  height: 90rpx;
  flex: 1;
  position: relative;
  overflow: hidden;
}

.current-line {
  border-bottom: 1px solid transparent;
  display: inline-block;
  color: #7F7F7F;
  font-size: 32rpx;
  line-height: 84rpx;
}

.tabBorer .current-line {
  border-bottom: 6rpx solid #FF5C59;
  color: #333;
  font-weight: bold;
}

.swiper {
  width: 100%;
  margin-top: 179rpx;
}
.product-list{
  display: flex;
  padding:26rpx 18rpx;
  justify-content: space-between;
  flex-wrap: wrap;
}
.product{
  width:352rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-bottom: 36rpx;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}
.product-image{
  width:100%;
  height: 352rpx;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}
.product-title{
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 16rpx 10rpx 4rpx;
}
.product-intro{
  color: #7F7F7F;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 0 10rpx;
}
.data-panel{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 18rpx 10rpx 20rpx;
}
.price{
  font-size: 32rpx;
  color: #FF5C59;
}
.end-time{
  color: #7F7F7F;
  font-size: 24rpx;
}