.container {
  padding-bottom: 164rpx;
}

.class-img {
  width: 100%;
  display: block;
}

.join-panel {
  position: fixed;
  width: -webkit-fill-available;
  bottom: 0;
  height: 84rpx;
  background: #fff;
  z-index: 100;
  display: flex;
  align-items: center;
  padding: 40rpx;
  justify-content: space-between;
  border-top: 1px solid #dcdcdc;
}

.join-text {
  font-size: 30rpx;
  color: #000;
}

.join-price {
  font-size: 30rpx;
  color: #FF5C59;
  flex: 1;
}

.join-btn {
  width: 300rpx;
  height: 84rpx;
  background: #FF5C59;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 84rpx;
  border-radius: 50px;
}

.free-btn {
  display: block;
  width: 100%;
  height: 84rpx;
  background: #FF5C59;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 84rpx;
  border-radius: 50px;
}

rich-text {
  display: block;
  padding: 30rpx;
}

.ul_class {
  list-style-type: none;
  padding: 0;
}

.li_class {
  padding: 0;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.span_class {
  color: #333;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  text-align: left;
}

.p_class {
  font-size: 28rpx;
  line-height: 48rpx;
  margin-bottom: 20rpx;
}

.p_class .pho {
  width: 100%;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  display: block;
}

.class-img {
  width: 100%;
  display: block;
}

.class-list {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
}

.class-list-title {
  font-size: 32rpx;
  color: #333;
  padding-bottom: 30rpx;
  font-weight: bold;
}

.choiceness-item {
  display: flex;
  padding-bottom: 32rpx;
  border-bottom: 1px solid #e7e7e7;
  margin-bottom: 30rpx;
}

.choiceness-item:last-child {
  border: none;
}

.choiceness-item-text {
  display: flex;
  flex-direction: column;
  flex: auto;
  overflow: hidden;

}

.choiceness-item-title {
  font-size: 32rpx;
  margin-bottom: 20rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: bold;
}

.choiceness-item-desc {
  font-size: 24rpx;
  line-height: 32rpx;
  color: #999990;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

.choiceness-item-img-container {
  width: 240rpx;
  height: 136rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
  position: relative;
}

.choiceness-item-img {
  width: 100%;
  height: 100%;
  border-radius: 5px;

}

.price {
  font-size: 32rpx;
  color: #ff5c59;
}

.free-tag {
  width: 74rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  position: absolute;
  top: 0;
  left: 0;
  font-size: 24rpx;
  color: #fff;
  background: #FF5C59;
  border-top-left-radius: 5px;
  border-bottom-right-radius: 5px;

}

.lock {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}
.poster-btn{
  width: 100%;
  height: 84rpx;
  background: #FF5C59;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 84rpx;
  border-radius: 4rpx;
  letter-spacing: 4rpx;
  margin-bottom: 40rpx;
}