.container{
  padding-bottom: 164rpx;
}
.class-img{
  width:100%;
  display: block;
}
.join-panel{
  position: fixed;
  width:-webkit-fill-available;
  bottom:0;
  height:84rpx;
  background: #fff;
  z-index: 100;
  display: flex;
  align-items: center;
  padding:40rpx;
  justify-content: space-between;
  border-top:1px solid #dcdcdc;
}

.join-text{
  font-size: 30rpx;
  color: #000;
}
.join-price{
  font-size: 30rpx;
  color: #FF5C59;
  flex: 1;
}
.join-btn{
  width:300rpx;
  height:84rpx;
  background: #FF5C59;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 84rpx;
  border-radius: 50px;
}
.free-btn{
  display: block;
  width:100%;
  height:84rpx;
  background: #FF5C59;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 84rpx;
  border-radius: 50px;
}
rich-text{
  display: block;
  padding-top: 20rpx;
}
.ul_class {
  list-style-type: none;
  padding: 0;
}

.li_class {
  padding: 0;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.span_class {
  color: #333;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  display: block;
  text-align: left;
}

.p_class {
  font-size: 28rpx;
  line-height:48rpx;
  text-indent: 2em;
  margin-bottom: 20rpx;
}

.p_class .pho {
  width: 100%;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  display: block;
}

.class-img {
  width: 100%;
  display: block;
}
