.userinfo {
  background: #fff;
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.avatar-path {
  width: 116rpx;
  height: 116rpx;
  border-radius: 50px;
  margin-right: 20rpx;
}

.utext {
  flex: 1;
}

.utext-top {
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.nickname {
  font-size: 32rpx;
  color: #333;
  margin-right: 14rpx;
}

.grade {
  border-radius: 11px;
  background: rgba(50, 197, 255, 0.1);
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  color: #32c5ff;
  font-size: 24rpx;
  padding: 0 14rpx;
}

.date {
  font-size: 28rpx;
  color: #666;
}

.schedule {
  display: flex;
  align-items: center;
  color: #000;
  font-size: 28rpx;
}

.schedule-icon {
  width: 28rpx;
  height: 31rpx;
  margin-right: 10rpx;
}

.integral {
  display: flex;
  margin: 0 30rpx;
  background: rgba(255, 92, 89, 0.1);
  align-items: center;
  border-radius: 4px;
  height: 80rpx;
  padding: 0 28rpx;
  background: #fff;
}

.integral-icon {
  width: 40rpx;
  height: 44rpx;
  margin-right: 20rpx;
}

.integral-text {
  color: #333;
  font-size: 28rpx;
}

.integral-num {
  color: #ff5d5a;
}

.topTabSwiper {
  display: flex;
  height: 90rpx;
  border-bottom: 1px solid #dcdcdc;
  background: #fff;
}

.tab {
  text-align: center;
  height: 90rpx;
  flex: 1;
  position: relative;
  overflow: hidden;
}

.current-line {
  border-bottom: 1px solid transparent;
  display: inline-block;
  color: #7f7f7f;
  font-size: 32rpx;
  line-height: 84rpx;
}

.tabBorer .current-line {
  border-bottom: 6rpx solid #ff5c59;
  color: #333;
  font-weight: bold;
}

.toggle-box {
  overflow: hidden;
  background: #f9fafb;
  /* padding: 30rpx; */
}

.choiceness-container {
  padding: 30rpx;
}

.choiceness-item {
  display: flex;
  padding-bottom: 32rpx;
  border-bottom: 1px solid #e7e7e7;
  margin-bottom: 30rpx;
}

.choiceness-item:last-child {
  border: none;
  margin: 0;
  padding: 0;
}

.choiceness-item-text {
  display: flex;
  flex-direction: column;
  /* flex-wrap: wrap; *//* justify-content: space-between; */
}

.choiceness-item-title {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.choiceness-item-desc {
  font-size: 24rpx;
  color: #666;
  flex: 1;
}

.choiceness-item-img {
  width: 280rpx;
  height: 180rpx;
  margin-right: 20rpx;
  border-radius: 5px;
  flex-shrink: 0;
}

.end-date {
  font-size: 24rpx;
  color: #999;
}

.activity {
  padding: 30rpx;
}

.activity-item {
  background: #fff;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}

.activity-item:last-child {
  margin: 0;
}

.activity-pic {
  width: 100%;
  height: 340rpx;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}

.activity-title {
  padding: 30rpx 24rpx 34rpx;
  color: #333;
  font-size: 32rpx;
}

.product-list {
  display: flex;
  padding: 26rpx 18rpx;
  justify-content: space-between;
  flex-wrap: wrap;
}

.product {
  width: 352rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-bottom: 36rpx;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
  height: 490rpx;
}

.product:nth-last-child(2), .product:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 100%;
  height: 352rpx;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}

.product-title {
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 16rpx 10rpx 4rpx;
}

.product-intro {
  color: #7f7f7f;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 0 10rpx;
}

.data-panel {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 18rpx 10rpx 20rpx;
}

.price {
  font-size: 32rpx;
  color: #ff5c59;
}

.end-time {
  color: #7f7f7f;
  font-size: 24rpx;
}

.help {
  margin: 30rpx 0;
  background: #fff;
  padding: 0 30rpx;
}

.help-item {
  padding: 37rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.help-text {
  font-size: 32rpx;
  color: #333;
}

.help-icon {
  width: 16rpx;
  height: 30rpx;
}

.help-line {
  height: 1px;
  width: 100%;
  background: #dcdcdc;
}

.login-button {
  border-radius: 50px;
  margin: 40rpx auto;
  width: 200rpx;
  height: 80rpx;
  font-size: 32rpx;
}

.quit-button {
  border-radius: 50px;
  margin: 40rpx auto;
  width: 250rpx;
  height: 80rpx;
  font-size: 32rpx;
}

.product-status {
  margin: 4rpx 10rpx 0;
}

.product-status2 {
  font-size: 24rpx;
  background: #ff5c59;
  display: inline-block;
  color: #fff;
  padding: 0rpx 6rpx;
  border-radius: 3px;
}

.product-status1 {
  font-size: 24rpx;
  border: 1px solid #32c5ff;
  display: inline-block;
  color: #fff;
  padding: 0rpx 6rpx;
  border-radius: 3px;
}
